<div class="d-flex flex-row justify-content-around align-items-center border-bottom pt-2 text-bg-dark">

  <div class="mb-2">
    <h5 class=""> Sophia <span class="">&#183;</span></h5>
  </div>

  <div class="d-flex flex-row justify-content-between mb-3">
    <div class="me-5">
      <%= link_to("Home", root_path, class: "link") %>
    </div>
    <div class="">
      <% Category.find_each do |category| %>
        <small class="me-4"><%= link_to category.topic, category %></small>
      <% end %>
    </div>
  </div>

  <div class="d-flex flex-row mb-2">

    <% if current_user %>

      <div class="px-2">        
        <%= current_user.username %>
      </div> 

      <div class="px-2">
        <%= link_to new_article_path, class:"" do %>
        "Create Article"
      <% end%>
      </div>

      <div class="px-2">
        <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete}, class:"" %>
      </div>


    <% else%> 

      <div class="px-2">
        <%= link_to "Sign In", new_user_session_path, class:"" %>
      </div>

      <div class="px-2">
        <%= link_to 'Sign Up', new_user_registration_path, class: "" %>
      </div>

    <%end%>
  </div>    
  
</div>
