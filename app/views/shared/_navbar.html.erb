<div class="d-flex flex-row justify-content-around align-items-center border-bottom pt-2 text-bg-dark">

  <div class="mb-2 mx-3">
    <h5 class="txt-n2"> Sophia <span class=""></h5>
  </div>

  <div class="d-flex flex-row justify-content-between mb-2">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle txt-n" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Philosophy topics
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <div class="me-5">
          <small><%= link_to("Home", root_path, class: "link lnk-h ms-3") %></small>
        </div>
        <% Category.find_each do |category| %>
          <%= link_to category.topic, category, class: "dropdown-item txt-drop me-4" %>
        <% end %>
        <div class="me-5">
          <small><%= link_to("Profile", profile_path, class: "link lnk-h ms-3") %></small>
          <small><%= link_to("Search", articles_path, class: "link lnk-h ms-3") %></small>
        </div>
      </div>
    </div>
  </div>

  <div class="d-flex flex-row mb-2">

    <% if current_user %>

      <div class="ms-3 me-5 mt-2">        
       <h5 class="txt-n"><%= current_user.username %></h5>
      </div> 

      <div class="pe-3">
        <%= link_to "Create Article", new_article_path, class:"txt-n" %>
      </div>

      <% if current_user.admin? %>
        <div class="pe-3">  
          <%= link_to "Manage Categories", new_category_path, class:"txt-n" %>
        </div>
      <% end %>

      <div class="pe-3">
        <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete}, class: "txt-n" %>
      </div>

    <% else%> 

      <div class="px-2">
        <%= link_to "Sign In", new_user_session_path, class: "txt-n" %>
      </div>

      <div class="px-2">
        <%= link_to 'Sign Up', new_user_registration_path, class: "txt-n" %>
      </div>

    <%end%>
  </div>    
  
</div>
