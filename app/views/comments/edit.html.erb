<div class="d-flex flex-row justify-content-center mt-5">
  <div class="w-75">
    <h4 class="mb-4"><b>Edit Comment</b></h4>
    <%= form_for([@article, @comment], url: article_comment_path(@article, @comment), method: :patch) do |f| %>
      <div class=''>
        <div class="d-flex flex-row">
          <%= f.text_area :body, placeholder: 'Comment', size: "100x3",class:'mt-3' %>
        </div>
        <%= f.submit class:'btn btn-outline-primary py-0 mt-2'%>
      </div>
    <% end %>
    <p class="mt-3"><%= link_to 'Back', categories_path %></p>
  </div>
</div>