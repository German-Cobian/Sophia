<div class="mt-5 border border-dark">
  <div class="mt-3">
    <strong class="ms-5">Comments: </strong>
    <%= @article.comments.count %>
  </div>
  <% @article.comments.each do |comment| %>
    <div class="my-4 mx-5">
      <div class="d-flex flex-row justify-content-start">
        <%= image_tag( comment.commenter.avatar, height: 30, width: 30, class: "rounded-circle" ) %>
        <p class="ms-2"><small><%= comment.commenter.username %></small><p>
      </div>
      <p class="my-0 ms-5"><span>* <small><%= comment.body %></small></p></span>
      <%= comment.id %>
      <div class="d-flex flex-row justify-content-end">
        <p class="me-3"><small><%= time_ago_in_words(comment.created_at) %> ago</p></small>
        <% if comment.commenter == current_user %>
          <%= button_to "Delete Comment", article_comment_path(@article, comment), method: :delete, class:"btn btn-outline-secondary py-0"%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
