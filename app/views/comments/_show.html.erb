<div class="mt-3">
  <strong>Comments: </strong>
  <%= @article.comments.count %>  
  <% @article.comments.each do |comment| %>
    <div class="my-4">
      <p class="ms-5"><span>* <%= comment.body %></p></span>
      <p><small><%= time_ago_in_words(comment.created_at) %> ago</p></small>
    </div>
  <% end %>
</div>
