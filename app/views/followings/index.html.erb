<div class="my-5 border border-dark rounded f-cont">

  <h4 class="my-3 ms-5"><b>Following These Users:</b></h4>

  <% @followings.each do |following|%>
    <div class="d-flex flex-row justify-content-around border py-2">
      <div class="mx-2">
        <%= image_tag( following.following_user.avatar, height: 50, width: 50, class: "" ) %>
      </div>
      <div class="d-flex flex-column">
        <small><%= following.following_user.username %></small>
      </div>
      <div class="d-flex flex-column">
        <p><small>Joined at: <%= following.following_user.created_at.strftime("%b %d %Y") %></small></p>
        <p><small><%= link_to 'View Profile', profile_path(following.following_user), class: "" %></small></p>
      </div>
    </div>
  <% end %>

</div>

<div class="mt-2 flink">
  <small><%= link_to 'Back', profile_path(@user.id) %></small>
</div>
   
