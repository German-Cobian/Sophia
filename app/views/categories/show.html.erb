<div class="d-flex flex-wrap justify-content-start my-5 mx-5">
  <% @category.articles.order('created_at DESC').each do |article|%>
    <div class="d-flex flex-row w-50 h-50 border ml-2">
      <div>
        <h6><b><%= @category.topic %></b></h6>
        <h6><%= article.title %></h6>
        <p><%= truncate article.body, length: 100 %></p>
        <p ><%= link_to 'Read More', articles_path(article) %></p> 
      </div>
    </div>
  <% end %>
</div>