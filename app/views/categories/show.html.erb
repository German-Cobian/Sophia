<div class="my-5">
  <h4 class="ms-5"><b><%= @category.topic %></b></h4>
  <div class="d-flex flex-wrap justify-content-start mx-5">
    <% @category.articles.order('created_at DESC').each do |article|%>
      <div class="cat3-container d-flex flex-column flex-lg-row border mt-3 ml-2">
        <div class="img-cat">
          <%= image_tag(article.image, height: 220, width: 220) if article.image.attached? %> 
        </div>
        <div>
          <h6 class="mt-2 mx-2"><b><%= article.title %></b></h6>
          <p class="mx-2"><%= truncate article.body, length: 200 %></p>
          <div class="d-flex flex-row ms-2">
                <%= image_tag( article.user.avatar, height: 30, width: 30, class: "rounded-circle" ) if article.user.avatar.attached? %></span>
                <p class="ms-2"><%= article.user.username%></p>
          </div>
          <p class="ms-2"><%= link_to 'Read More', article_path(article) %></p> 
        </div>
      </div>
    <% end %>
  </div>
</div>
