<h4 class="mt-5 ms-5"><b><%= @category.topic %></b></h4>
<div class="d-flex flex-wrap justify-content-start mt-3 mx-5">
  <% @category.articles.order('created_at DESC').each do |article|%>
    <div class="d-flex flex-row w-50 h-50 border ml-2">
      <div class="">
        <%= image_tag(article.image, height: 220, width: 220) if article.image.attached? %> 
      </div>
      <div>
        <h6 class="mt-2 ms-2"><b><%= article.title %></b></h6>
        <p class="ms-2"><%= truncate article.body, length: 200 %></p>
        <div class="d-flex flex-row ms-2">
              <%= image_tag( article.user.avatar, height: 30, width: 30, class: "rounded-circle" ) if article.user.avatar.attached? %></span>
              <p class="ms-2"><%= article.user.username%></p>
        </div>
        <p class="ms-2"><%= link_to 'Read More', articles_path(article) %></p> 
      </div>
    </div>
  <% end %>
</div>