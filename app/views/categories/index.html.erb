<div class="my-5">

  <h4 class="ms-5"><b>Most Popular</b></h4>
  <div class="cat1-container d-flex flex-row justify-content-center mt-3 mx-5 border">
    <% popular = Vote.popular %>
    <% popular.each do |vote| %>
      <div class="d-flex flex-column flex-md-row justify-content-around w-100" >
          <div class="img-pop mt-3">
            <%= image_tag(vote.article.image, height: 270 ) if vote.article.image.attached? %>
          </div>
          <div class="mt-3 mx-5">
            <h6 class="txt-orange"><%= vote.article.title %></h6>
            <small><p><%= truncate vote.article.body, length: 400 %></p></small>
            <div class="d-flex flex-row ms-2">
              <%= image_tag( vote.article.user.avatar, height: 30, width: 30, class: "rounded-circle" ) if vote.article.user.avatar.attached? %></span>
              <p class="ms-2"><%= vote.article.user.username%></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>

  <h4 class="mt-4 ms-5"><b>Most Recent</b></h4>
  <div class="d-flex flex-wrap justify-content-between mx-5" >
    <% categories = Category.includes(:most_recent_article) %>
    <% categories.each do |category| %>
      <div class="cat2-container d-flex flex-column align-items-center border mt-3 mx-1 ">
        <div>
          <h6 class="mt-3"><%= link_to category.topic, category %></h6>
        </div>
        <div>
          <%= link_to image_tag(category.most_recent_article&.image, height: 120, width: 150), category_path(category)  %>
        </div>
        <div class="my-3 mx-2">
          <small class="cat-title"><%= truncate category.most_recent_article&.title, length: 35 %></small>
        </div>
      </div>
    <% end %>
  </div>

