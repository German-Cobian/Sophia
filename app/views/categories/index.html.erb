<div>

  <div class="d-flex flex-row justify-content-center my-3 mx-5 border" style="height:300px">
    <% popular = Vote.popular %>
    <% popular.each do |vote| %>
      <div class="d-flex flex-rown justify-content-around w-100" >
          <div class="mt-3">
            <%= image_tag(vote.article.image, height: 270 ) if vote.article.image.attached? %>
          </div>
          <div class="mt-3 mx-5">
            <h6 class="txt-orange"><%= vote.article.title %></h6>
            <small><p><%= truncate vote.article.body, length: 400 %></p></small>
            <div class="d-flex flex-row ms-2">
              <%= image_tag( vote.article.user.avatar, height: 30, width: 30, class: "rounded-circle" ) if vote.article.user.avatar.attached? %></span>
              <p class="ms-2"><%= vote.article.user.username%></p>
            </div>
          </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-row justify-content-between mx-5" style="height:200px">
    <% categories = Category.includes(:most_recent_article) %>
    <% categories.each do |category| %>
      <div class="d-flex flex-column border w-25 mx-1 ">
        <div>
          <h6 class="mt-1 ms-3"><%= link_to category.topic, category %></h6>
        </div>
        <div class="d-flex flex-row justify-content-center">
          <%= link_to image_tag(category.most_recent_article&.image, height: 120, width: 150), category_path(category) %>
        </div>
        <div class="d-flex flex-row justify-content-center">
          <small><p class="mt-1 px-2"><%= link_to category.most_recent_article&.title, class:"" %></p></small>
        </div>
      </div>
    
    <% end %>
  </div>

