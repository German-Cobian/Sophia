<div class="border border-dark py-3 px-5">
  <%= form_with model: Category.new, url: categories_path, method: :post, local: true do |f| %>
    <div class="mb-3">
      <b><%= f.label "Topic Category", class: "form-label" %></b><br />
      <%= f.text_field :topic, class: "form-control form-control-sm" %>
    </div>
    <div class="d-flex flex-row justify-content-end mb-3">
      <%= f.submit "Submit Category", class: "btn btn-outline-primary" %>
    </div>
  <% end %>

  <% categories = Category.all%>
  <% categories.each do |category|%>
    <div class="d-flex flex-column mb-3">
      <div class="d-flex flex-row justify-content-between">
        <%= category.topic %>
        <%= button_to "Delete", category_path(category), method: :delete, class:"btn btn-outline-danger me-5"%>
      </div>
    </div>
  <% end %>

</div>