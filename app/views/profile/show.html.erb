<div class="d-flex flex-wrap justify-content-start border rounded border-dark my-5 mx-5 py-5 px-5">
  <div class="d-flex flex-column">
    <% if current_user.avatar.present? %>
      <%= image_tag current_user.avatar, size: "150x150", class: "rounded-circle me-5" %>
    <% else %>
      <%= image_tag "Default-img.jpeg", size: "150x150", class: "rounded-circle me-5" %>
    <% end %>
    <div class="d-flex flex-row justify-content-start mt-3">
      <p class="me-2"><small><strong><%= current_user.display_name %></strong></small><p>
      <p><small>@<%= current_user.username %></small><p>
    </div>
  </div>
  <div >
    <div class="d-flex flex-row justify-content-start mt-2">
      <div class="me-3">
        <span><%= image_tag "balloon.jpg", size: "20x20", class: "me-1" %></span>
        <span><small><%= current_user.date_of_birth.strftime("%b %d %Y") %></small></span>
      </div>
      <div class="me-3">
        <span><%= image_tag "location.jpg", size: "20x20", class: "me-1" %></span>
        <span><small><%= current_user.location %></small></span>
      </div>
      <div class="me-3">
        <span><%= image_tag "calendar.jpg", size: "20x20", class: "me-1" %></span>
        <span><small><%= current_user.join_date.strftime("%b %d %Y") %></small></span>
      </div>
    </div>
    <div class="d-flex flex-row justify-content-start mt-2">
      <div class="me-4"><small>Following Count</small></div>
      <div class="me-4"><small>Followers Count</small></div>
    </div>
  </div>
  <div class="mt-2">
    <%= link_to "Edit Profile", class: "btn btn-twitter-outline rounded-pill" %>
  </div> 
</div>

<h6 class="ms-5">Bio:</h6>

<div class="border rounded border-dark mx-5 ps-5 pt-2">
  <p><%= current_user.bio %><p>
</div>
